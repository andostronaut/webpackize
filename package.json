{
  "name": "webpack-config.js",
  "version": "1.0.0",
  "description": "A predefined configuration for webpack.config.json",
  "license": "MIT",
  "type": "module",
  "bin": {
    "webpack-config.js": "./dist/cli.mjs"
  },
  "author": {
    "name": "iamando",
    "email": "iamando@tuta.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamando/webpack-config.js.git"
  },
  "bugs": {
    "url": "https://github.com/iamando/webpack-config.js/issues"
  },
  "homepage": "https://github.com/iamando/webpack-config.js#readme",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "webpack-config.js",
    "cli",
    "webpack",
    "webpack-config",
    "json",
    "config",
    "configuration"
  ],
  "scripts": {
    "start": "jiti ./src/cli.ts",
    "typecheck": "tsc",
    "build": "pkgroll",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "release:patch": "npm run build && npm version patch && npm run build && npm publish && git push --follow-tags",
    "prepare": "husky install"
  },
  "files": [
    "dist",
    "docs"
  ],
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-conventional": "^17.4.4",
    "@commitlint/format": "^17.4.4",
    "@commitlint/types": "^17.4.4",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "conventional-changelog-atom": "^2.0.8",
    "eslint": "^8.37.0",
    "husky": "^8.0.0",
    "jiti": "^1.18.2",
    "lint-staged": "^13.2.1",
    "pkgroll": "^1.9.0",
    "prettier": "^2.8.7",
    "typescript": "^4.9.5",
    "validate-branch-name": "^1.3.0"
  }
}

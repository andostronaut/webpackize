{
  "name": "webpack-config.js",
  "version": "1.0.0",
  "description": "A predefined configuration for webpack.config.json",
  "license": "MIT",
  "type": "module",
  "bin": {
    "webpack-config.js": "./dist/cli.mjs"
  },
  "author": {
    "name": "iamando",
    "email": "iamando@tuta.io"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/iamando/webpack-config.js.git"
  },
  "bugs": {
    "url": "https://github.com/iamando/webpack-config.js/issues"
  },
  "homepage": "https://github.com/iamando/webpack-config.js#readme",
  "directories": {
    "doc": "docs"
  },
  "keywords": [
    "webpack-config.js",
    "cli",
    "webpack",
    "webpack-config",
    "json",
    "config",
    "configuration"
  ],
  "scripts": {
    "start": "jiti ./src/cli.ts",
    "typecheck": "tsc",
    "build": "pkgroll",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "release": "yarn publish",
    "release:major": "yarn run build && yarn version major && yarn run build && yarn publish && git push --follow-tags",
    "release:minor": "yarn run build && yarn version minor && yarn run build && yarn publish && git push --follow-tags",
    "release:patch": "yarn run build && yarn version patch && yarn run build && yarn publish && git push --follow-tags"
  },
  "files": [
    "dist",
    "docs"
  ],
  "devDependencies": {
    "@types/execa": "^2.0.0",
    "@types/lodash": "^4.14.192",
    "@types/node": "^18.15.11",
    "jiti": "^1.18.2",
    "pkgroll": "^1.9.0",
    "prettier": "^2.8.7",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@clack/core": "^0.3.2",
    "@clack/prompts": "^0.6.3",
    "cleye": "^1.3.2",
    "execa": "^7.1.1",
    "lodash": "^4.17.21",
    "picocolors": "^1.0.0"
  }
}
